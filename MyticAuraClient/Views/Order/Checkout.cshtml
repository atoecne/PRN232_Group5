@model MyticAuraClient.DTOs.Order.CreateOrderDto

@{
    ViewData["Title"] = "Checkout";
}

<h2>Thông tin người nhận</h2>

<form asp-controller="Order" asp-action="PlaceOrder" method="post">
    <div class="form-group">
        <label>Họ tên người nhận</label>
        <input asp-for="RecipientName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="RecipientPhone" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="RecipientAddress" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Xác nhận đặt hàng</button>
</form>
